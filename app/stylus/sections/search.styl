.vote
  
  width: 50px;
  height: 40px;
  overflow: hidden;
  position: absolute
  transform: translate3d(0, 0, 0)
  color: #FFF
  letter-spacing: 2px
  cursor: pointer
  opacity: .8
  // left:250px
  line-height:3em
  text-decoration:none
  text-align:center      
  background: #FA5A5A
  border-bottom: 5px rgba(0, 0, 0, .21) solid
  &:hover
    margin-top: 1px
    border-bottom-width: 4px
  &:active
    background-color: #ff4c4b
    margin-top: 4px
    border-bottom-width: 1px

.trans 
  animation: turn 3s ease-in

